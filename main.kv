#Screens

#Voy a tener que estilar de diferentes formas


#dependiendo si es desktop, tablet  o mobile.
#La idea es que tengan tres tipos de disenios 
#MDKivyApp para estilar y renderi

<MainScreen>:
    ScreenManager:
        id: screen_manager
        HomeScreen:
            name: 'home_screen'
        SearchUser
            name: 'search_user_screen'
        CreateUser:
            name: 'create_user_screen'
        SearchUserCamera:
            name:'search_user_camera'
        DetailScreen
            name: 'detail_user_screen'



<HomeScreen>:
    BoxLayout:
        Button:
            text: 'buscar usuario'
            on_release: root.switch_screen_search_user()
        Button:
            text: 'crear usuario'
            on_release: root.switch_screen_create_user()

<SearchUser>:
    BoxLayout:
        orientation:'vertical'
        Button:
            text: 'Volver atras'
        Label:
            text:'DNI'
        Button:
            text:'Siguiente'
            on_release: root.switch_screen_camera()

