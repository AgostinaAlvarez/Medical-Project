    BoxLayout:
        orientation:'vertical'
        Button:
            text:'volver atras'
        Label:
            text:'DNI'
        Button:
            text:'siguiente'

<DetailScreen>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text:'Pantalla de detalle'

